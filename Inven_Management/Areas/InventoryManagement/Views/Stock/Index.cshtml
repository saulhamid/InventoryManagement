}
<div class="thinbox">
    <div class="th_thinbox">
        <p>Stock List</p>
    </div>
    <p></p>
    <div class="row">
        <div id="container">
            <div id="demo">
                <table id="myDataTable" class="display">
                    <thead>
                        <tr>
                            <th>Invoiec No.</th>
                            <th>Product Name</th>
                            <th>Supplier Name</th>
                            <th>Employee Name</th>
                            <th>Total Quantity</th>
                            <th>Unit Price</th>
                            <th>Total Replace</th>
                            <th>Total Return</th>

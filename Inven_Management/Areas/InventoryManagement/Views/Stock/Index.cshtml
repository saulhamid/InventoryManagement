@{
    ViewBag.Title = "Index";
}
<div class="thinbox">
    <div class="th_thinbox">
        <p>Stock List</p>
    </div>
    <p></p>
    <div class="row">
        <div id="container">
            <div id="demo">
                <table id="myDataTable" class="display">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" class="chkAll" />Select All
                            </th>
                            <th>Product Name</th>
                            <th>Total Quantity</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                            <th>Total Replace</th>
                            <th>Total Return</th>
                            <th>Total Slup</th>
                        </tr>
                        <tr>
                            <th style="padding-left: 2.5%">Actions</th>
                            <th>Product Name</th>
                            <th>Total Quantity</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                            <th>Total Replace</th>
                            <th>Total Return</th>
                            <th>Total Slup</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section head{
    <script>
        $(document).ready(function () {
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/InventoryManagement/Stock/_index",
                "bProcessing": true,
                "aLengthMenu": tablelength(),
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [
                    {
                        "sName": "Id",
                        "bSearchable": false,
                        "bSortable": false,
                        "sWidth": "13%",
                        "fnRender": function (oObj) {
                            return ' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0] + '">&nbsp; <a title="Click on for Edit" style="text-decoration:none;" href=\"/Config/Supplier/Edit/' + oObj.aData[0] + '\"  class=" i-btn-edit-row"></a>' +
                            '&nbsp; <a title="Click on for Delete" style="text-decoration:none;"  data-url="/Config/Supplier/Delete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="i-btn-remove-row"></a>';
                        }
                    }
                                ,
                                 { "sName": "ProductName", "sWidth": "20%" }
                                , { "sName": "TotalQuantity", "sWidth": "10%" }
                                , { "sName": "UnitPrice", "sWidth": "10%" }
                                , { "sName": "TotalPrice", "sWidth": "10%" }
                                , { "sName": "TotalReplace", "sWidth": "10%" }
                                , { "sName": "TotalReturn", "sWidth": "10%" }
                                , { "sName": "TotalSlup", "sWidth": "10%" }
                ]
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [
                    { type: "checkbox", "sClass": "chkAll" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                ]
            });
            SelectAllForDelete();
            $("#Code").keyup(function () {
                $("#Code").parent().find("p").remove();
                var url = "@Url.Action("check", "Stock", new { area = "InventoryManagement" })"
                var code = $(this).val();
                $.get("@Url.Action("check", "Stock", new { area = "InventoryManagement" })", { code: code }, function (data, status) {
                    $("#Code").parent().append('<p class="RequiredField" style="color:red;" >' + data + '</p>');
                });
            });
            $("#Name").keyup(function () {
                $("#Name").parent().find("p").remove();
                var url = "@Url.Action("check", "Stock", new { area = "InventoryManagement" })"
                var name = $(this).val();
                $.get("@Url.Action("check", "Stock", new { area = "InventoryManagement" })", { name: name }, function (data, status) {
                    $("#Name").parent().append('<p class="RequiredField" style="color:red;" >' + data + '</p>');
                });
            });
        });
    </script>
}



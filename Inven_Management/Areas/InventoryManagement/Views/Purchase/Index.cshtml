@{
    ViewBag.Title = "Index";
}
@model InventoryViewModel.Models.Purchase
<div class="headrow">
    <button type="button" title="Add New Product" data-url="/InventoryManagement/Purchase/Create" onclick="GoTo(this)" id="" class="i-btn-add "> New</button>
    <button type="button" title="Delete Product" data-url="/InventoryManagement/Purchase/Delete" onclick="deletedData(this, 'myDataTable');" id="" class="i-btn-remove"> Delete</button>
</div>
<div class="thinbox">
    <div class="th_thinbox">
        <p>Purchase List</p>
    </div>
    <p></p>
    <div class="row">
        <div id="container">
            <div id="demo">
                <table id="myDataTable" class="display">
                    <thead>

                        <tr>
                            <th>
                                <input type="checkbox" class="chkAll" />Select All
                            </th>
                            <th>Invoiec No.</th>
                            <th>Date</th>
                            <th>Supplier Name</th>
                            <th>Employee Name</th>
                            <th>TotalDiscount</th>
                            <th>GrandTotal</th>
                        </tr>
                        <tr>
                            <th style="padding-left: 2.5%">Actions</th>
                            <th>Invoiec No.</th>
                            <th>Date</th>
                            <th>Supplier Name</th>
                            <th>Employee Name</th>
                            <th>TotalDiscount</th>
                            <th>GrandTotal</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="headrow">
    <button type="button" title="Add New Product" data-url="/InventoryManagement/Purchase/Create" id="" class="btnCreate i-btn-add "> New</button>
    <button type="button" title="Delete Product" data-url="/InventoryManagement/Purchase/Delete" onclick="deletedData(this, 'myDataTable');" id="" class="i-btn-remove"> Delete</button>
</div>
@section head{
    <script>
        $(document).ready(function () {
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/InventoryManagement/Purchase/_index",
                "bProcessing": true,
                "aLengthMenu": tablelength(),
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [
                                {
                                    "sName": "Id",
                                    "bSearchable": false,
                                    "bSortable": false,
                                    "sWidth": "12%",
                                    "fnRender": function (oObj) {
                                        return ' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0] + '">&nbsp; <a title="Click on for Edit" style="text-decoration:none;" href=\"/InventoryManagement/Purchase/Edit/' + oObj.aData[0] + '\"  class=" i-btn-edit-row"></a>' +
                                        '&nbsp; <a title="Click on for Delete" style="text-decoration:none;"  data-url="/InventoryManagement/Purchase/Delete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="i-btn-remove-row"></a>'+
                                            '<a title="Click on for Detail" style="text-decoration:none;"  href=\"/InventoryManagement/Purchase/rptPurchease/' + oObj.aData[0] + '\" target="_blank"   class="i-btn-edit-row"></a>';
                                    }
                                }
                                , { "sName": "Invoice", "sWidth": "10%" }
                                , { "sName": "Date", "sWidth": "10%" }
                                , { "sName": "SupplierName", "sWidth": "10%" }
                                , { "sName": "EmployeeName", "sWidth": "10%" }
                                , { "sName": "TotalDiscount", "sWidth": "10%" }
                                , { "sName": "GrandTotal", "sWidth": "10%" }
                ]
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [{ type: "checkbox", "sClass": "chkAll" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                ]
            });
            SelectAllForDelete();
            $("#Code").keyup(function () {
                $("#Code").parent().find("p").remove();
                var url = "@Url.Action("check", "Purchase", new { area = "InventoryManagement" })"
                var code = $(this).val();
                $.get("@Url.Action("check", "Purchase", new { area = "InventoryManagement" })", { code: code }, function (data, status) {
                    $("#Code").parent().append('<p class="RequiredField" style="color:red;" >' + data + '</p>');
                });
            });
            $("#Name").keyup(function () {
                $("#Name").parent().find("p").remove();
                var url = "@Url.Action("check", "Purchase", new { area = "InventoryManagement" })"
                var name = $(this).val();
                $.get("@Url.Action("check", "Purchase", new { area = "InventoryManagement" })", { name: name }, function (data, status) {
                    $("#Name").parent().append('<p class="RequiredField" style="color:red;" >' + data + '</p>');
                });
            });
        });
    </script>
}

@model InventoryViewModel.Models.UOM

@using (Html.BeginForm("Edit", "UOM", FormMethod.Post, new { @area = "Config", @Id = "upfrom" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken();
    <div class="box-content">
        <div class="col=md-4">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="col=md-8">
            @Html.TextBoxFor(model => model.Code, null, new { @placeholder = "UOM Code", @class = "required form-control" })
        </div>

        <div class="col=md-4">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="col=md-8">
            @Html.TextBoxFor(model => model.Name, null, new { @placeholder = "UOM Name", @class = "required form-control" })
        </div>
        <div class="col=md-4">
            @Html.LabelFor(model => model.Remarks)
        </div>
        <div class="col=md-8">
            @Html.TextBoxFor(model => model.Remarks, null, new { @placeholder = "Remarks", @class = " form-control" })
        </div>
    </div>

    <div class="row">
        <label class="col-sm-3">
            <button type="button" title="Save Data" onclick="pageSubmit('upfrom');" class="i-btn-save"> Save</button>
        </label>
        <div class="col-sm-4">
            <button type="button" title="Cancel Data" class=" btncancel i-btn-cancel"> Cancel</button>
        </div>
    </div>
        </div>
}
<script>
    $(function () {
        popupvalidation("upfrom");
    });
</script>

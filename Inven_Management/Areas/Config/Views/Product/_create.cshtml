                                        @Html.LabelFor(model => model.Quantity)
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.Quantity, new { @placeholder = "Quantity", @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.Quantity)

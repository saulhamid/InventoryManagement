@model InventoryViewModel.Models.Product
@using UIHelper.MVC
<div class="thinbox">
    <div class="th_thinbox">
        <p>Create</p>
    </div>
                        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @area = "Config", enctype = "multipart/form-data", @Id = "upfrom" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Id)
                            <div class="row" style="">
                                <div class="col-md-1">
                                    <div class="editor-label">
                                        &nbsp;
                                    </div>
                                    <div class="editor-field">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="editor-label">
                                        @Html.LabelFor(model => model.Code)
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.Code, new { @placeholder = "Code", @class = "required form-control code", @Onchage = "CheckCode(this)" })
                                        @Html.ValidationMessageFor(model => model.Code)
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="editor-label">
                                        @Html.LabelFor(model => model.Name)
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Name", @class = " required form-control" })
                                        @Html.ValidationMessageFor(model => model.Name)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>Category</p>
                                    </div>
                                    <div class="editor-field">
                                        @Html.SimpleDropDownFor(model => model.ProductCatagoriesId, "/Config/DropDown/ProductCategory", new { @placeholder = " Product Category Name", @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.ProductCatagoriesId)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>Product Color</p>
                                    </div>

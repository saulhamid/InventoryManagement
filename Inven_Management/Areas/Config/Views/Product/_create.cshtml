                                        @Html.ValidationMessageFor(model => model.ProductTypeId)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>Product Brand</p>
                                    </div>
                                    <div class="editor-field">
                                        @Html.SimpleDropDownFor(model => model.ProductBrandId, "/Config/DropDown/ProductBrand", new { @placeholder = " Product Category Name", @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.ProductBrandId)
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-1">
                                    <div class="editor-label">
                                        &nbsp;
                                    </div>
                                    <div class="editor-field">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>Unite Of Mesurment</p>
                                    </div>
                                    <div class="editor-field">
                                        @Html.SimpleDropDownFor(model => model.UOMId, "/Config/DropDown/UOM", new { @placeholder = "Unite Of Mesurment", @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.ProductCatagoriesId)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>Supplier</p>
                                    </div>
                                    <div class="editor-field">
                                        @Html.SimpleDropDownFor(model => model.SupplierId, "/Config/DropDown/Supplier", new { @placeholder = " Product Supplier", @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.ProductCatagoriesId)
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="editor-label">

                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    <div class="editor-label">
                                        &nbsp;
                                    </div>
                                    <div class="editor-field">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>ProductSize</p>
                                    </div>
                                    <div class="editor-field">
                                        @Html.SimpleDropDownFor(model => model.ProductSizeId, "/Config/DropDown/ProductSize", new { @placeholder = " Product Category Name", @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.ProductCatagoriesId)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="editor-label">
                                        <p>ProductType</p>
                                    </div>
                                    <div class="editor-field">
